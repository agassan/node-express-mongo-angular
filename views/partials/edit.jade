h2(ng-show='bookmark.id') Edit Bookmark
h2(ng-hide='bookmark.id') New Bookmark
form(name='frm')
    div.control-group(ng-class='{error: frm.name.$invalid}')
        label Name
        input(type='text', name='name', ng-model='bookmark.name', required='required')
        span.help-inline(ng-show='frm.name.$error.required') Required
    div.control-group(ng-class='{error: frm.url.$invalid}')
        label URL
        input(type='url', name='url', ng-model='bookmark.url', required='required')
        span.help-inline(ng-show='frm.url.$error.required') Required
        span.help-inline(ng-show='frm.url.$error.url') Not a URL
    label Description
    textarea(name='description', ng-model='bookmark.description')
    br
    a.btn(href='#/') Cancel
    button.btn.btn-primary(ng-click='save()', ng-disabled='isClean() || frm.$invalid') Save
    button.btn.btn-danger(ng-click='destroy()', ng-show='bookmark._id') Delete
